<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zeynep.cell2i.HomePage">


    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EDEDED"
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content">

        <Button
            android:layout_marginLeft="25dp"
            android:id="@+id/home_page"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:background="@drawable/message"
            />

        <Button
            android:id="@+id/gift"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:background="@drawable/gift"
            android:layout_marginLeft="35dp" />

        <Button
            android:id="@+id/remainder"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:background="@drawable/coins"
            android:layout_marginLeft="35dp" />

        <Button
            android:id="@+id/exit"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:background="@drawable/exit"
            android:layout_marginLeft="35dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        >
        <ImageView
            android:layout_marginRight="2dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/usericon"/>
        <TextView
            android:text="isim soyisim gelecek"
            android:layout_marginLeft="8dp"
            android:textColor="#111111"
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        >
        <ImageView
            android:layout_marginRight="2dp"

            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@drawable/cellicon"/>

        <TextView
            android:text="Telno gelecek"
            android:id="@+id/telno"
            android:layout_marginLeft="8dp"
            android:textColor="#111111"
            android:layout_width="200dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:id="@+id/linearLayout3">
        <ImageView
            android:layout_marginRight="2dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/star"/>

        <TextView

            android:text="tarife gelecek"
            android:layout_marginLeft="8dp"
            android:textColor="#111111"
            android:id="@+id/tarife"
            android:layout_width="200dp"
            android:layout_height="35dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_marginBottom="15dp"
        android:id="@+id/imageView4" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:background="#111111"

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="63dp"
        android:layout_toStartOf="@+id/imageView4" />



</RelativeLayout>


